<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="inputPostTitle">Title</label>
    <input id="inputPostTitle" class="form-control" type="text" name="postTitle">
  </div>
  <div class="form-group">
    <label for="inputPostContent">Post</label>
    <textarea id="inputPostContent" class="form-control" type="text" name="postBody" rows="3"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer"); -%>
